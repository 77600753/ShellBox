<!--pages/tel/tel.wxml-->
<!-- 学校信息系老师联系电话页面 -->
<view class="page">
  <view class="page__hd">
    <view class="page__title">贝壳通讯录</view>
    <view class="page__desc">查询学校老师及学校各系部办公电话</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <navigator url="/pages/tel/departmentTel" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/department.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">学校各系部联系电话</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </view>
    <view class="weui-cells__title">我有事要联系老师：</view>
    <view class="weui-cells weui-cells_after-title">
      <view wx:for="{{telNumber}}" wx:key="telList" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image src="/images/icon3.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
        <view class="weui-cell__ft weui-cell__ft_in-access" id='{{item.tel}}' catchtap='callPhone' catchlongpress="copyIt">{{item.tel}}</view>
      </view>
      <view class="weui-cells__title">QQ：</view>
      <view wx:for="{{QQNumber}}" wx:key="QQList" class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__hd">
            <image src="/images/qq.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">{{item.name}}</view>
          <view class="weui-cell__ft" id='{{item.qq}}' catchlongpress='copyIt'>{{item.qq}}</view>
        </view>
      </view>
    </view>
    <view class="weui-cells__tips">点击电话号码直接拨打，长按复制到粘贴版☺</view>
  </view>
  <view class="weui-footer">
    <view class="weui-footer__links">
      <navigator url="" class="weui-footer__link">Airmole.</navigator>
      <navigator url="" class="weui-footer__link">欢迎补充更多...</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2017-2018 Airmole Cheung.</view>
  </view>
</view>