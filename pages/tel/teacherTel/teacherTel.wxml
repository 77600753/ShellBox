<!--pages/tel/teacherTel/teacherTel.wxml-->
<!-- 学校各老师专页 -->
<view class="page">
  <view class="page__hd">
    <view class="page__title">老师联系电话</view>
    <view class="page__desc">学院常用的老师、导员联系方式</view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <view wx:for="{{telNumber}}" wx:key="telList" class="weui-cell weui-cell_access" hover-class="weui-cell_active" catchtap='callPhone' catchlongpress="copyIt">
      <view class="weui-cell__hd">
        <image src="/images/call.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">{{item.name}}</view>
      <view class="weui-cell__ft weui-cell__ft_in-access" id='{{item.tel}}'>{{item.tel}}</view>
    </view>
    <view class="weui-cells__title">QQ：</view>
    <view wx:for="{{QQNumber}}" wx:key="QQList" class="weui-cells weui-cells_after-title"  catchlongpress='copyIt'>
      <view class="weui-cell">
        <view class="weui-cell__hd">
          <image src="/images/qq.png" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
        <view class="weui-cell__ft" id='{{item.qq}}'>{{item.qq}}</view>
      </view>
    </view>
  </view>
  <view class="weui-cells__tips">点击电话号码直接拨打，长按复制到粘贴版☺</view>
  <view class="weui-btn-area">
    <button plain='true' open-type="share" type="default" over-class="other-button-hover">
      <image class="weui-btn btnIcon" src='/images/share.png'></image>
      <text>分享给朋友</text>
    </button>
  </view>
  <view class="weui-footer">
    <view class="weui-footer__text">Copyright © 2018 Airmole.</view>
  </view>
</view>