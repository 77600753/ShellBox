<!--pages/score/showScore/showScore.wxml-->
<view class="page">
  <view class="page__hd">
    <view class="page__title">加权平均分：{{jsonContent[1][0]}}</view>
    <view class="page__desc">本程序首次查询可能较慢，加权平均分计算方法仅供参考，最终准确加权平均分请以导员计算为准</view>
  </view>
  <view class="page__bd">
    <view class="weui-cells__title">您的各科成绩：</view>
    <view class="weui-cells weui-cells_after-title">
      <view wx:for="{{jsonContent[0]}}" wx:key="ClassName" class="weui-cell">
        <view class="weui-cell__bd">{{item.className}}
          <span class="page__desc">{{item.studyScore}}</span>
        </view>
        <view class="weui-cell__ft" style='color:#000000;'>{{item.score}}</view>
      </view>
    </view>
  </view>
  <view class="weui-footer">
    <view class="weui-footer__links">
      <navigator url="" class="weui-footer__link">很奔放</navigator>
      <navigator url="" class="weui-footer__link">Airmole.</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2017-2018 Airmole BKIEBox.</view>
  </view>
</view>